<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonFlat" parent="ButtonBase">
        <item name="android:background">@drawable/btn_ripple_transparent_round</item>
        <!-- borderless round ripple -->
        <!--<item name="android:background">?selectableItemBackgroundBorderless</item>-->
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="ButtonElevation" parent="ButtonBase">
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>

    <style name="ButtonRoundWhite" parent="ButtonElevation">
        <item name="android:background">@drawable/btn_ripple_white_round</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@string/roboto_light</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
