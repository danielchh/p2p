<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Text views-->
    <style name="TxtCustom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TxtWhite" parent="TxtCustom">
        <item name="android:textColor">@color/text_white</item>
    </style>
    <style name="TxtBlack" parent="TxtCustom">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TxtWhiteThin" parent="TxtWhite">
        <item name="android:fontFamily">@string/roboto_thin</item>
    </style>

    <style name="TxtBlackThin" parent="TxtBlack">
        <item name="android:fontFamily">@string/roboto_thin</item>
    </style>

    <style name="TxtWhiteLight" parent="TxtWhite">
        <item name="android:fontFamily">@string/roboto_light</item>
    </style>

    <style name="TxtBlackLight" parent="TxtBlack">
        <item name="android:fontFamily">@string/roboto_light</item>
    </style>

    <style name="TxtBlackRegular" parent="TxtBlack">
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="TxtWhiteRegular" parent="TxtWhite">
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>
</resources>