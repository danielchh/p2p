<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/txtDescription"
        style="@style/TxtBlackThin"
        android:text="mono"
        tools:text="mono"
        android:textSize="20sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/txtCardNumber"
        />

    <TextView
        android:id="@+id/txtCardNumber"
        style="@style/TxtBlackLight"
        android:textSize="@dimen/text_card"
        android:text="4149 4978 6011 4802"
        app:layout_constraintHorizontal_chainStyle="spread"
        tools:text="4149 4978 6011 4802"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivCardType"
        app:layout_constraintTop_toBottomOf="@id/txtDescription"
        />

    <ImageView
        android:id="@+id/ivCardType"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_mastercard"
        tools:src="@drawable/ic_mastercard"

        app:layout_constraintTop_toTopOf="@id/txtCardNumber"
        app:layout_constraintBottom_toBottomOf="@id/txtCardNumber"
        app:layout_constraintLeft_toRightOf="@id/txtCardNumber"
        app:layout_constraintRight_toRightOf="parent"
        />




</android.support.constraint.ConstraintLayout>