<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/bg_blue"
    >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_content_main">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBoxAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/txtToggleAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TxtBlackLight"
                android:text="@string/choose_all"
                app:layout_constraintTop_toTopOf="@id/checkBoxAll"
                app:layout_constraintBottom_toBottomOf="@id/checkBoxAll"
                app:layout_constraintRight_toLeftOf="@id/checkBoxAll"
                android:layout_marginEnd="8dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_contact_import"
                android:paddingBottom="32dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"

                app:layout_constraintTop_toBottomOf="@id/checkBoxAll"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <include
        android:id="@+id/bottom_shadow"
        layout="@layout/shadow_rect_top"
        style="@style/BottomShadowRect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>