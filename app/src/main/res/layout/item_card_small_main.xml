<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@drawable/bg_blue"
    android:clipToPadding="false"
    android:clipChildren="false">

    <TextView
        android:id="@+id/txtDescription"
        style="@style/TxtWhiteRegular"
        android:layout_height="@dimen/description_height"
        android:text="mono"
        tools:text="mono"
        android:textSize="24sp"
        android:alpha="0"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clCardInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/txtCardNumber"
            style="@style/TxtWhiteThin"
            android:textSize="@dimen/text_card_small"
            android:text="4149 4978 6011 4802"
            tools:text="4149 4978 6011 4802"

            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/ivCardType"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_mastercard"
            tools:src="@drawable/ic_mastercard"

            app:layout_constraintTop_toTopOf="@id/txtCardNumber"
            app:layout_constraintBottom_toBottomOf="@id/txtCardNumber"
            app:layout_constraintLeft_toRightOf="@id/txtCardNumber"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>